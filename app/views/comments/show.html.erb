<p id="notice"><%= notice %></p>

<p>
  <strong>Body:</strong>
  <%= @comment.body %>
</p>

<p>
  <strong>User:</strong>
  <%= @comment.user.full_name %>
</p>

<p>
  <strong>Post:</strong>
  <%= @comment.post.title %>
</p>

<%= link_to '| Edit |', edit_post_comment_path(@post,@comment) if @current_user && @current_user.id == @comment.user.id%>
<%= link_to '| Destroy |', post_comment_path(@post,@comment), method: :delete, data: { confirm: 'Are you sure?' } if @current_user && @current_user.id == @comment.user.id%>
<%= link_to '| Back |', post_comments_path(@post) %>
